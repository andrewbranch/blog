{%- capture fullTitle -%}
	{% if title %}{{ title }} âˆ™ {{ metadata.title }}{% else %}{{ metadata.title }}{% endif %}
{%- endcapture -%}

<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ fullTitle }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<meta name="generator" content="{{ eleventy.generator }}">

		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ fullTitle }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ fullTitle }}">

		{% css "lib" %}
		{% include '@unocss/reset/tailwind.css' %}
		{% include 'katex/dist/katex.min.css' %}
		{% endcss %}
		{% css %}
		{% include 'styles/uno.css' %}
		{% include 'styles/fonts.css' %}
		{% include 'styles/main.css' %}
		{% endcss %}
		<link rel="stylesheet" href="{% getBundleFileUrl "css", "lib" %}">
		<link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
	</head>
	<body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		<div class="flex flex-col justify-between h-full max-w-[var(--width-content)] px-[0.8rem] my-0 mx-auto">
			<div>
				<header class="mt-4 mb-8 flex items-center justify-between">
					<nav>
						<h2 class="visually-hidden">Top level navigation menu</h2>

						<ul class="flex items-center m-0">
							<li class="mr-6">
								<a href="/">
									<img src="/images/logo.svg" width="64" height="64" class="m-0" alt="Andrew Branch">
								</a>
							</li>

							<li class="pt-4">
								<a
									href="/about"
									class="font-grotesk text-textSecondary lowercase no-underline hover:underline"
									{% if entry.url == '/about' %}
										aria-current="page"
									{% endif %}
									>About</a
								>
							</li>
						</ul>
					</nav>

					<div class="pt-4">
						<a href="https://github.com/andrewbranch/blog" class="text-[28px]">
							<span class="visually-hidden">View source on GitHub</span>
							<div aria-hidden="true" class="i-mdi:github"></div>
						</a>
					</div>
				</header>
				<main id="skip">
					{{ content }}
				</main>
			</div>
			<footer></footer>
		</div>
	</body>
</html>
